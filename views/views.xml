<odoo>
  <data>

    <template id="index">
      <html>
        <head>
          <title>Web Portofolio</title>
          <meta charset="utf-8" />
          <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
          
          <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900" rel="stylesheet" />

          <link rel="stylesheet" href="/vit_portocv/static/css/open-iconic-bootstrap.min.css" />
          <link rel="stylesheet" href="/vit_portocv/static/css/animate.css" />
          
          <link rel="stylesheet" href="/vit_portocv/static/css/owl.carousel.min.css" />
          <link rel="stylesheet" href="/vit_portocv/static/css/owl.theme.default.min.css" />
          <link rel="stylesheet" href="/vit_portocv/static/css/magnific-popup.css" />

          <link rel="stylesheet" href="/vit_portocv/static/css/aos.css" />

          <link rel="stylesheet" href="/vit_portocv/static/css/ionicons.min.css" />
          
          <link rel="stylesheet" href="/vit_portocv/static/css/flaticon.css" />
          <link rel="stylesheet" href="/vit_portocv/static/css/icomoon.css" />
          <link rel="stylesheet" href="/vit_portocv/static/css/style.css" />
        </head>
        <body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
          
          
          <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light site-navbar-target" id="ftco-navbar">
            <div class="container">
              <a class="navbar-brand" href="index.html">N</a>
              <button class="navbar-toggler js-fh5co-nav-toggle fh5co-nav-toggle" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="oi oi-menu"></span> Menu
              </button>

              <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav nav ml-auto">
                  <li class="nav-item"><a href="#home-section" class="nav-link"><span>Home</span></a></li>
                  <li class="nav-item"><a href="#about-section" class="nav-link"><span>About</span></a></li>
                </ul>
              </div>
            </div>
          </nav>

          <section id="home-section" class="hero">
            
            <div class="home-slider  owl-carousel">
              <div class="slider-item">
                <div class="overlay"></div>
                <div class="container">
                  <div class="row d-md-flex no-gutters slider-text align-items-end justify-content-end" data-scrollax-parent="true">
                    <div class="one-third order-md-last img" t-attf-style="background-image: url(data:image/*;base64,{{employee_id.image}})">
                      <div class="overlay"></div>
                    </div>
                    <div class="one-forth d-flex  align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
                      <!-- <a href="https://vimeo.com/45830194" class="icon-video popup-vimeo d-flex justify-content-center align-items-center">
                        <span class="ion-ios-play play"></span>
                      </a> -->
                      <div class="text">
                        <span class="subheading">Hello</span>
                        <h1 class="mb-4 mt-3">I'm <span t-field="employee_id.name"/></h1>
                        <h2 class="mb-4"><span t-field="employee_id.job_id"/></h2>
                        <p><a href="#" class="btn-custom">Hire me</a></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <section class="ftco-about ftco-counter img ftco-section" id="about-section">
            <div class="bg-info">
            <div class="container">
              <h2 class="display-4 font-italic"><span t-field="employee_id.name"/></h2>
              <div class="row">
                <div class="col-4">                 
                    <div class="lead">
                      <div class="card" style="width: 18rem;">
                        <img t-attf-src="data:image/*;base64,{{employee_id.image}}" class="card-img-top" alt="..." />
                          <div class="card-body">
                            <p class="card-text">
                            <p>
                              <div class="text-primary">Job :</div>
                              <div><span t-field="employee_id.job_id"/></div>
                            </p>
                            <p>
                              <div class="text-primary">Departement :</div>
                              <div><span t-field="employee_id.department_id"/></div>
                            </p>
                            </p>
                          </div>
                      </div>
                    </div>
                  </div>
                

                <div class="col-4">
                  <table class="table table-borderless text-white">
                    <thead>
                      <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody class="lead text-white">
                      <tr>
                        <th scope="row"><i class="icon-female"></i></th>
                        <td><span t-field="employee_id.gender"/></td>                      
                      </tr>
                      <tr>
                        <th scope="row"><i class="icon-heart"></i></th>
                        <td><span t-field="employee_id.marital"/></td>
                      </tr>
                      <tr>
                        <th scope="row"></th>
                        <td></td>
                      </tr>
                      <tr>
                        <th scope="row"></th>
                        <td></td>
                      </tr>
                      <tr>
                        <th scope="row"><i class="icon-building"></i></th>
                        <td><span t-field="employee_id.work_location"/></td>                      
                      </tr>
                      <tr>
                        <th scope="row"><i class="icon-envelope"></i></th>
                        <td><span t-field="employee_id.work_email"/></td>
                      </tr>
                      <tr>
                        <th scope="row"><i class="icon-dashboard"></i></th>
                        <td><span t-field="employee_id.resource_calendar_id"/></td>
                      </tr>
                    </tbody>
                  </table>
                </div>                     
                </div>
            </div>
            </div>
            <div class="container">
                  <div class="ftco-footer-widget mb-1">
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft">
                      <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                      <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                      <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                      <li class="ftco-animate"><a href="#"><span class="icon-github"></span></a></li>
                      <li class="ftco-animate"><a href="#"><span class="icon-youtube"></span></a></li>
                    </ul>
                  </div>
              </div>             
          </section>        
        
        <!-- loader -->
        <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee"/><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00"/></svg></div>


        <script src="/vit_portocv/static/js/jquery.min.js"></script>
        <script src="/vit_portocv/static/js/jquery-migrate-3.0.1.min.js"></script>
        <script src="/vit_portocv/static/js/popper.min.js"></script>
        <script src="/vit_portocv/static/js/bootstrap.min.js"></script>
        <script src="/vit_portocv/static/js/jquery.easing.1.3.js"></script>
        <script src="/vit_portocv/static/js/jquery.waypoints.min.js"></script>
        <script src="/vit_portocv/static/js/jquery.stellar.min.js"></script>
        <script src="/vit_portocv/static/js/owl.carousel.min.js"></script>
        <script src="/vit_portocv/static/js/jquery.magnific-popup.min.js"></script>
        <script src="/vit_portocv/static/js/aos.js"></script>
        <script src="/vit_portocv/static/js/jquery.animateNumber.min.js"></script>
        <script src="/vit_portocv/static/js/scrollax.min.js"></script>
        
        <script src="/vit_portocv/static/js/main.js"></script>
          
        </body>
      </html>
    </template>

    <template id="not_found">
      <h1>TIDAK DITEMUKAN</h1>
    </template>
    
  </data>
</odoo>